package pageObjects;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;

public class ChaptersPage extends BasePage {

	public ChaptersPage(WebDriver driver) {
		super(driver);
	}
	
	
	@FindBy(xpath="//input[@placeholder='Search chapters by name...']")
	WebElement txt_SearchChapters;
	
	@FindBy(xpath="//a[@href='/school/chapter/create']")
	WebElement btn_AddNewChapter;
	
	@FindBy(xpath="//input[@placeholder='e.g., Introduction to Algebra']")
	WebElement txt_ChapterName;
	
	@FindBy(xpath="//input[@placeholder='e.g., Covers basic algebraic concepts']")
	WebElement txt_Description;
	
	@FindBy(xpath="//button[contains(.,'Search themes...')]")
	WebElement btn_Themes;
	
	@FindBy(xpath="//input[@placeholder='Search themes...']")
	WebElement txt_SearchTheme;
	
	@FindBy(xpath="//li//button[normalize-space()='Around the world']")
	WebElement btn_Theme;
	
	@FindBy(xpath="//button[contains(.,'Search activities...')]")
	WebElement btn_Activities;
	
	@FindBy(xpath="//input[@placeholder='Search activities...']")
	WebElement txt_SearchActivities;
	
	@FindBy(xpath="//li//button[normalize-space()='Dentists and Dental Health']")
	WebElement btn_Activity;
	
	@FindBy(xpath="//input[@placeholder='e.g., 1']")
	WebElement txt_Order;
	
	@FindBy(xpath="//button[normalize-space()='Cancel']")
	WebElement btn_Cancel;
	
	public void Search_Chapters(String chapter) throws InterruptedException {
		Thread.sleep(2000);
		txt_SearchChapters.sendKeys(chapter);
	}
	
	public void Click_AddNewChapter() throws InterruptedException {
		Thread.sleep(2000);
		btn_AddNewChapter.click();
	}
	
	public void Set_ChapterName(String cname) throws InterruptedException {
		Thread.sleep(2000);
		txt_ChapterName.sendKeys(cname);
	}
	
	public void Set_Description(String desc) throws InterruptedException {
		Thread.sleep(2000);
		txt_Description.sendKeys(desc);
	}
	
	public void Click_Themes() throws InterruptedException {
		Thread.sleep(2000);
		btn_Themes.click();
	}
	
	public void Search_Theme(String theme) throws InterruptedException {
		Thread.sleep(2000);
		txt_SearchTheme.sendKeys(theme);
	}
	
	public void Click_Theme() throws InterruptedException {
		Thread.sleep(2000);
		btn_Theme.click();
	}
	
	public void Click_Activities() throws InterruptedException {
		Thread.sleep(2000);
		btn_Activities.click();
	}
	
	public void Search_Activities(String activity) throws InterruptedException {
		Thread.sleep(2000);
		txt_SearchActivities.sendKeys(activity);
	}
	
	public void Click_Activity() throws InterruptedException {
		Thread.sleep(2000);
		btn_Activity.click();
	}
	
	public void Set_Order(String num) throws InterruptedException {
		Thread.sleep(2000);
		txt_Order.sendKeys(num);
	}
	
	public void Click_Cancel() throws InterruptedException {
		Thread.sleep(2000);
		btn_Cancel.click();
	}

}
