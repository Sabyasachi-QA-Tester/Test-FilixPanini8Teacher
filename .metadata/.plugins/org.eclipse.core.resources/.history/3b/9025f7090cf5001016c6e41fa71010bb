package pageObjects;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

import utilities.WaitUtils;

public class CreatorPage extends BasePage {

	public CreatorPage(WebDriver driver) {
		super(driver);
	}
	
	public void Click_Tests() {
		WebElement btn_Tests = driver.findElement(By.xpath("//a[@href='/creator/tests']"));
		WaitUtils.WaitForClickable(driver, btn_Tests).click();
	}
	
	public void Click_AddNew() {
		WebElement btn_AddNew = driver.findElement(By.xpath("//a[@href='/creator/tests/add-test']"));
		WaitUtils.WaitForClickable(driver, btn_AddNew).click();
	}
	
	public void Set_TestName(String tname) {
		WebElement txt_TestName = driver.findElement(By.xpath("//input[@placeholder='Enter test Name']"));
		WaitUtils.WaitForVisibility(driver, txt_TestName).sendKeys(tname);
	}
	
	public void Set_DurationTest(String time) {
		WebElement txt_DurationTest = driver.findElement(By.xpath("//input[@placeholder='Enter Duration']"));
		WaitUtils.WaitForVisibility(driver, txt_DurationTest).sendKeys(time);
	}
	
	public void Set_DescriptionTest(String desc) {
		WebElement txt_Description = driver.findElement(By.xpath("//input[@placeholder='Enter description']"));
		WaitUtils.WaitForVisibility(driver, txt_Description).sendKeys(desc);
	}
	
	public void Click_Tags() {
		WebElement Tags = driver.findElement(By.xpath("//input[@id='react-select-testtags-input']"));
		WaitUtils.WaitForVisibility(driver, Tags).click();
	}
	
	public void Click_Article() {
		WebElement btn_article = driver.findElement(By.xpath("//a[@href='/creator/articles']"));
		WaitUtils.WaitForClickable(driver, btn_article).click();
	}
	
	public void Click_AddArticle() {
		WebElement btn_Add = driver.findElement(By.xpath("//a[@href='/creator/articles/add']"));
		WaitUtils.WaitForClickable(driver, btn_Add).click();
	}
	
	public void Set_AddTitle(String title) {
		WebElement txt_title = driver.findElement(By.xpath("//input[@placeholder='Add a title for your article']"));
		WaitUtils.WaitForVisibility(driver, txt_title).sendKeys(title);
	}
	
	public void Set_DescriptionArticle(String desc) {
		WebElement txt_desc = driver.findElement(By.xpath("//textarea[@placeholder='Add a short description for your article']"));
		WaitUtils.WaitForVisibility(driver, txt_desc).sendKeys(desc);
	}
	
	public void Click_GetStartedArticle() {
		WebElement btn_Article = driver.findElement(By.xpath("//div[contains(text(),'Get started on your article')]"));
		WaitUtils.WaitForClickable(driver, btn_Article).click();
	}
	
	
	
	

}
