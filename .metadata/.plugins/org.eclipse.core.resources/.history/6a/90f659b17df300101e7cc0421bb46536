package pageObjects;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;

public class LoginPage extends BasePage {

	public LoginPage(WebDriver driver) {
		super(driver);
	}
	
	
	public void Click_Login() {
		driver.findElement(By.xpath("//a[@href='/login' and normalize-space()='Sign In']")).click();
	}
	
	public void Click_LoginWithEmailPassword() {
		driver.findElement(By.xpath("//div[normalize-space()='Login with email & password']")).click();
	}
	
	public void Set_Email(String email) {
		driver.findElement(By.xpath("//input[@placeholder='Enter your email']")).sendKeys(email);
	}
	
	public void Set_Password(String password) {
		driver.findElement(By.xpath("//input[@placeholder='Enter your password']")).sendKeys(password);
	}
	
	public void Click_SignIn() {
		driver.findElement(By.xpath("//button[normalize-space()='Sign In']")).click();
	}
	
	
}
