package pageObjects;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

import utilities.WaitUtils;

public class LoginPage extends BasePage {

	public LoginPage(WebDriver driver) {
		super(driver);
	}
	
	
	public void Click_Login() {
		WebElement Login = driver.findElement(By.xpath("//a[@href='/login' and normalize-space()='Sign In']"));
		WaitUtils.WaitForClickable(driver, Login).click();
	}
	
	public void Click_LoginWithEmailPassword() {
		WebElement LoginWithEmailPassword= driver.findElement(By.xpath("//div[normalize-space()='Login with email & password']"));
		WaitUtils.WaitForClickable(driver, LoginWithEmailPassword).click();
	}
	
	public void Set_Email(String email) {
		WebElement Email = driver.findElement(By.xpath("//input[@placeholder='Enter your email']"));
		WaitUtils.WaitForVisibility(driver, Email).sendKeys(email);
	}
	
	public void Set_Password(String password) {
		WebElement Password = driver.findElement(By.xpath("//input[@placeholder='Enter your password']"));
		WaitUtils.WaitForVisibility(driver, Password).sendKeys(password);
	}
	
	public void Click_SignIn() {
		WebElement SignIn =  driver.findElement(By.xpath("//button[normalize-space()='Sign In']"));
		WaitUtils.WaitForClickable(driver, SignIn).click();
	}
	
	public void Click_SideMenu() {
		WebElement SideMenu = driver.findElement(By.xpath("//button[contains(@class,'h-10 w-10 flex items-center justify-center bg-white/10 rounded-lg text-white hover:bg-white/20')]"));
		WaitUtils.WaitForClickable(driver, SideMenu).click();
	}
	
	
	
	
}
