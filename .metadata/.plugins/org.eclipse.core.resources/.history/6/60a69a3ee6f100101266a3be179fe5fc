package testCases;

import org.testng.Assert;
import org.testng.annotations.Test;

import pageObjects.ChaptersPage;
import pageObjects.HomePage;
import pageObjects.LoginPage;
import testBase.BaseClass;

public class Test08_Chapters extends BaseClass {
	
	@Test
	public void Test_Chapters() {
		
		try {
			
			LoginPage lp = new LoginPage(driver);
			
			lp.Click_login();
			lp.Set_email(p.getProperty("Email"));
			lp.click_OTP();
			lp.Set_OTP(p.getProperty("OTP"));
			lp.Click_verify();

			
			HomePage hp = new HomePage(driver);
			hp.Click_menu();
			hp.Click_HPCSection();
			hp.Click_Chapters();
			
			ChaptersPage cp = new ChaptersPage(driver);
			
			cp.Search_Chapters("Dentists and Dental Health");
			cp.Click_AddNewChapter();
			cp.Set_ChapterName(randomeString().toLowerCase());
			cp.Set_Description(randomeString());
			cp.Click_Themes();
			cp.Search_Theme("Around the world");
			cp.Click_Theme();
			cp.Click_Activities();
			cp.Search_Activities("Dentists and Dental Health");
			cp.Click_Activity();
			cp.Click_Activities();
			cp.Click_RemoveActivity();
			cp.Set_Order("2");
			cp.Click_Cancel();
			
		}
		catch(Exception e) {
			Assert.fail("Failed test");
		}
		
		
		
	}

}
